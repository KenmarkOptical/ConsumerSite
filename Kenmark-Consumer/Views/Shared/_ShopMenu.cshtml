@model Kenmark_Consumer.Models.ShopMenu


<div class="col-xs-12 col-sm-4">
    <div class="col-xs-12" style="margin-bottom:25px;">

        <span class="col-xs-12" style="font-size: 16px; font-weight: bold; margin-top: 20px;">BROWSE</span>
        
  
