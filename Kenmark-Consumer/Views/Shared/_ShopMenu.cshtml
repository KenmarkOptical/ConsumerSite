@model Kenmark_Consumer.Models.ShopMenu

@using Kenmark_Consumer.Models

<script type="text/javascript">

    CreateAutoDropDown();

    function CreateAutoDropDown() {
        @(Html.Raw(Html.JavaScriptArray((List<string>)Common.GetQuickSearchFrames(), "QuickSearchArray")))
        actb($('#QuickSearchTB').get(0), QuickSearchArray);
    }
</script>
<div class="col-xs-12 col-sm-4">
    <div class="col-xs-12" style="margin-bottom: 25px;">

        <span class="col-xs-12" style="font-size: 16px; font-weight: bold; margin-top: 20px;margin-bottom:20px;">BROWSE</span>

        <div style="margin-top:10px;">
            @using (Html.BeginForm("ParseOrderPad", "Home", null, FormMethod.Post, new { @id = "AutoForm" }))
            {  
                <input class="form form-control" id="QuickSearchTB" name="QuickSearchTB" autocomplete="off" onclick="return false;" type="text" placeholder="Search for a frame..." class="input-text" style="color: black; background-color: transparent;">                            
            }
        </div>
        <div class="col-xs-12">
            <hr style="border-color: #c5c1b8; margin-bottom: 10px;" />
            <span class="glyphicon glyphicon-chevron-right" style="color: #64635e" aria-hidden="true"></span>&nbsp;
                            <a href="/Collection/ViewCollection?collection=ALL&n=MEN&Type=MEN&Page=1" style="text-decoration: none; font-weight: bold; color: #64635e;"><span class="browseText">MEN</span></a>

            <hr style="border-color: #c5c1b8; margin-top: 10px; margin-bottom: 10px;" />
            <span class="glyphicon glyphicon-chevron-right" style="color: #64635e" aria-hidden="true"></span>&nbsp;
                            <a href="/Collection/ViewCollection?collection=ALL&n=WOMEN&Type=WOMEN&Page=1" class="browseText" style="text-decoration: none; font-weight: bold; color: #64635e;"><span class="browseText">WOMEN</span></a>

            <hr style="border-color: #c5c1b8; margin-top: 10px; margin-bottom: 10px;" />
            <span class="glyphicon glyphicon-chevron-right" style="color: #64635e" aria-hidden="true"></span>&nbsp;
                            <a href="/Collection/ViewCollection?collection=ALL&n=YOUTH&Type=YOUTH&Page=1" class="browseText" style="text-decoration: none; font-weight: bold; color: #64635e;"><span class="browseText">YOUTH</span></a>

            <hr style="border-color: #c5c1b8; margin-top: 10px; margin-bottom: 10px;" />
            <span class="glyphicon glyphicon-chevron-right" style="color: #64635e" aria-hidden="true"></span>&nbsp;
                            <a href="/Collection/ViewCollection?collection=ALL&n=RX&Type=RX&Page=1" class="browseText" style="text-decoration: none; font-weight: bold; color: #64635e;"><span class="browseText">RX</span></a>

            <hr style="border-color: #c5c1b8; margin-top: 10px; margin-bottom: 10px;" />
            <span class="glyphicon glyphicon-chevron-right" style="color: #64635e" aria-hidden="true"></span>&nbsp;
                            <a href="/Collection/ViewCollection?collection=ALL&n=SUN&Type=SUN&Page=1" class="browseText" style="text-decoration: none; font-weight: bold; color: #64635e;"><span class="browseText">SUN</span></a>

        </div>
    </div>


</div>
<!-- SHOP DROPDOWN -->
<div class="col-xs-12 col-sm-8">

    <span style="font-size: 16px; font-weight: bold; margin-top: 20px;" class="col-xs-12 text-left">BRANDS</span>



    @foreach (var s in Model.Items.OrderBy(s => s.order))
    { 
        <div class="col-xs-6 col-sm-3">
            <a href="/Eyewear/@s.site_display.Replace(" ", "-")">
                <img class="img-responsive saturate-2" src="@Url.Content(@s.icon_image)"/>
            </a>
        </div>
    }


</div>
