@model Kenmark_Consumer.Models.WhereToBuy



<div class="col-xs-12">
    
    <span style="font-size:16px;"><strong>@Model.Customers.Count</strong> RETAILERS WITHIN <strong>@Model.Radius</strong> MILES OF <strong>@Model.Zip</strong></span> <br />
    <span style="display:inline-block; margin-bottom:30px;">*Specific frames may not be in stock but can always be special ordered.</span>
</div>

<div class="col-xs-12">
@foreach (var s in Model.Customers) { 
        
    <div class="col-xs-6 col-sm-4 no-gutter" style="margin-bottom:40px;">
            <span><strong>@s.customer_name</strong></span><br />
             @(s.address)<br />
             @(s.city), @(s.state)<br />
             @(s.phone)<br />
             @(s.distance) @(s.distance == 1 ? "Mile" : "Miles")<br />
           
           
            
            <div style="margin-top:3px;"><img src="~/Content/images/Where_To_Buy/icon_map.png" /><span style="display:inline-block; margin-right:5px;"><strong>MAP</strong></span>
            <img src="~/Content/images/Where_To_Buy/icon_link.png" /><strong>WEBSITE</strong></div>
    </div>
    }
</div>