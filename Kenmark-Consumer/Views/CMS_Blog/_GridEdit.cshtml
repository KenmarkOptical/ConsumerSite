@model Kenmark_Consumer.Models.SingleBlog

<div id="data-container">
    <div id="data-container-wrapper">

<script type="text/javascript">

    $(function () {
        $('.date-picker').datepicker();
        
    });

</script>


@using (Ajax.BeginForm("EditBlog", "CMS_Blog", new AjaxOptions{ OnComplete = "Complete"}, new { enctype = "multipart/form-data" }))
{   
        if (!String.IsNullOrEmpty(ViewBag.Error))
        {
        <div class="col-xs-12" style="font-size:16px;font-weight:bold;color:red; margin-top:20px;">            
            <span>Errors:</span><br />
            @Html.Raw(ViewBag.Error)
            <br /><br />
        </div>
        }
        
     <div class="col-xs-12 col-sm-6" style="margin-bottom: 50px; margin-top: 10px;">       
        @Html.LabelFor(m => m.data.title, new { @style = "font-size:14px;" })<br />
        @Html.TextBoxFor(m => m.data.title, new { @class = "form-control" })
    </div>

    <div class="col-xs-12 col-sm-6"  style="margin-bottom: 50px; margin-top: 10px;">            
        @Html.LabelFor(m => m.data.date, new { @style = "font-size:14px;" })<br />
        @Html.TextBoxFor(m => m.data.date, new { @class = "date-picker form-control", @type = "text", @style="max-width:250px;" })
    </div>

    <div class="col-xs-12" style="margin-bottom: 50px;">
        <span style="display: inline-block; margin-bottom: 5px; font-weight: bold; font-size: 14px;">Enter your blog content below</span>

        @Html.TextAreaFor(m => m.data.text, new { @id = "editor1", @name = "Content" })

        <script>
            // Replace the <textarea id="editor1"> with a CKEditor
            // instance, using default configuration.
            CKEDITOR.replace('editor1', {
            });
        </script>

        <div class="col-xs-12 col-sm-6" style="margin-top:20px;">
            <label for="photo">Upload Main Image: <br /> (1073 width any height)</label>
            <input type="file" name="main_image" class="btn btn-default" />
        </div>
        
        <div class="col-xs-12 col-sm-6" style="margin-top:20px;">
            <label for="photo">Upload Text Image: <br /> (350x250 px)</label>
            <input type="file" name="sub_image" class="btn btn-default" />
        </div>
       
        <div class="col-xs-12 col-sm-6 " style="margin-top:20px;">
            @Html.Label("Add a caption to your Text image here")
            @Html.TextBoxFor(m => m.data.sub_image_caption, new { @class="form-control"})
        </div>

        @Html.HiddenFor(m => m.data.id);
        @Html.HiddenFor(m => m.data.enabled);

        <div class="col-xs-12" style="margin-top: 20px;">
            <button class="btn btn-default" id="editBlogButton" type="submit">Submit</button>
        </div>

    </div>

}

</div>
    </div>