@model Kenmark_Consumer.Models.CollectionMain

@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    $(function () {

        $('.collectionText').mouseenter(function () {
            $(this).css("color", "#64635e");
        })
            .mouseleave(function () {
                $(this).css("color", "black");
            });

    });
</script>

<div class="row">
    <img class="img-responsive" src="@(Url.Content(Model.main_image))" />
</div>

<div class="row text-center" style="margin-top: 32px; margin-bottom: 32px;">
    <span style="display: block; font-size: 18px; font-weight: bold;">@(Model.collection_name)</span>
    <span style="display: block; font-size: 15px; max-width: 600px; margin: auto;">@(Model.about)</span>
</div>

<div class="col-xs-12 text-center" style="margin-top: 19px;">
    <span style="display: inline-block; font-size: 14px; color: #828282; margin-top: 30px; font-weight: bold;">COLLECTIONS</span><br />

    <div style="margin-bottom: 30px;">
        @foreach (var s in Model.Links)
        {
        
            <a class="collectionText" href="/Collection/ViewCollection?n=@Model.collection_name&collection=@s.code&Sub=@s.sub&Page=1">
                <span class="collectionText" style="display: inline-block; font-size: 20px; margin-top: 5px; font-weight: bold; text-decoration: none; color: black;">@s.sub
                    <span class="glyphicon glyphicon-chevron-right" style="color: #828282; font-size: 11px;" aria-hidden="true";></span>&nbsp;
                </span>
                <br />
            </a>
       
        }
    </div>
    @* <span class="collectionText" style="display:inline-block;font-size:20px;font-weight:bold;margin-top:5px;">SUN
        <span class="glyphicon glyphicon-chevron-right"style="color:#828282;font-size:11px;" aria-hidden="true"></span> &nbsp;
    </span><br />
    
    <span style="display:inline-block;font-size:14px;margin-top:30px;font-weight:bold;color:#828282">SEE ALSO</span><br />
    
    <span class="collectionText" style="display:inline-block;font-weight:bold;margin-top:5px;margin-bottom:100px;font-size:14px;">ORIGINAL PENGUIN YOUTH
        <span class="glyphicon glyphicon-chevron-right"style="color:#828282;font-size:11px;" aria-hidden="true"></span> &nbsp;
    </span>*@


</div>
