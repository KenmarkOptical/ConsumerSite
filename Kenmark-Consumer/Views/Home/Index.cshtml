}

<script type="text/javascript">

    
    $(function () {       
        $('#image-carousel').carousel({
            interval: 6000
        });

        $('#carousel-new-releases').carousel({
            interval: 10000
        });
    });
</script>


<div class="row">

    <div id="image-carousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
             @for (int i = 0; i < Model.Carousel.Count; i++)
            {
                <li data-target="#image-carousel" data-slide-to="@(i)" class="@(i == 0 ? "active" : "")"></li>
             }
            
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            @for (int i = 0; i < Model.Carousel.Count; i++)
            {
              <div class="item @(i == 0? "active" : "")">
                  @if (String.IsNullOrEmpty(Model.Carousel[i].link))
                  {
                      <img class="img-responsive feature" id="image-@(i)" src="@(Model.Carousel[i].image)" />  
                  }
                  else
                  {
                        <a href="@(Model.Carousel[i].link.Contains("http://") || Model.Carousel[i].link.Contains("https://") ?  Model.Carousel[i].link : "http://" +  Model.Carousel[i].link)" target="_blank">
                            <img class="img-responsive feature" id="image-@(i)" src="@(Model.Carousel[i].image)" />  
                        </a>
                  }
                              
            </div>  
            }
            
           @* <div class="item">
                <img class="img-responsive feature" id="image-0" src="@Url.Content("~/Content/images/home/feature.png")" />
                <div class="carousel-caption">
                    <h3>Caption Text</h3>
                </div>
            </div>*@


        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#image-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#image-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
    <!-- Carousel -->
</div>

