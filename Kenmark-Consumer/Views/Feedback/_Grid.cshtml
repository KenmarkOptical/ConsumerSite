@model Kenmark_Consumer.Models.Feedback


@using (Ajax.BeginForm("SaveFeedback", "Feedback", new AjaxOptions { HttpMethod = "Post"}))
{

    <div class="col-xs-12">
        @Html.LabelFor(m => m.Color, new { @class = "col-xs-12 no-gutter", @style = "font-size:11px; color:#64635e;" })
        @Html.TextBoxFor(m => m.Color, new { @class = "col-xs-12 col-sm-11 form-control" })
        @Html.ValidationMessageFor(m => m.Color)
    </div>
    
    <div class="col-xs-12">
        @Html.LabelFor(m => m.Design, new { @class = "col-xs-12 no-gutter", @style = "font-size:11px; color:#64635e;" })
        @Html.TextBoxFor(m => m.Design, new { @class = "col-xs-12 col-sm-11 form-control" })
        @Html.ValidationMessageFor(m => m.Design)
    </div>
     
    <div class="col-xs-12">
        @Html.LabelFor(m => m.Comments, new { @class = "col-xs-12 no-gutter", @style = "font-size:11px; color:#64635e" })
        @Html.TextAreaFor(m => m.Comments, 10, 10, new { @class = "col-xs-12 form-control", @style = "font-size:11px; color:#64635e;" })
    </div>
     
    <div class="col-xs-12">
        @Html.LabelFor(m => m.Email, new { @class = "col-xs-12 no-gutter", @style = "font-size:11px; color:#64635e" })
        @Html.TextBoxFor(m => m.Email, new { @class = "col-xs-12 col-sm-11 form-control" })
    </div>

    <div class="col-xs-12">
        <button id="feedbackButton" type="submit" class="btn btn-default submitButton" style="margin-top: 10px; margin-bottom: 10px;">Submit</button>
    </div>
    
    @Html.HiddenFor(m => m.Style);
    
    
}