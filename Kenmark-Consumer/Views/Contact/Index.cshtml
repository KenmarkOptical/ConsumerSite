@model Kenmark_Consumer.Models.Contact

@{
    ViewBag.Title = "Contact";
}

<script type="text/javascript">


</script>

<script type="text/javascript">
    function OnSuccess(data, status, xhr) {
       
        if (data.success == true)
        {
            $("input[type=text], textarea").val("");
            $('#validate').text("Thank You. Your contact information was submitted successfully.")
            $('.submitButton').prop('disabled', false);
            $('#validate').delay(3000).fadeOut();
            
        }
        else
        {
            $('#validate').text("There was an error when submitting your form. Please try again later.");
            $('#validate').delay(10000).fadeOut();
        }
   };
</script>

<script type="text/javascript">
    function OnFailure() {
        $('#validate').text("There was an error while processing your form. Please contact us @@kenmarkoptical.com");
    }
</script>


<script type="text/javascript">
    var is_mobile = false;
    $(function(){
        
        if ($('#mobile-test').is(':visible')) {
            is_mobile = true;
        }

        if (is_mobile) {
            $('.kenmarkInfo').css({ 'padding-left': '' });
        }

        if (is_mobile = false) {
            $('.kenmarkInfo').css({ 'padding-left' : '50px'});
        }

    });

</script>



<div class="row" >
    <div class="col-sm-3 kenmarkInfo" style="padding-left:50px;margin-top:50px;font-size:12px;">PROFILE / CONTACT</div>
</div>


<div class="row kenmarkInfo">
    
    <div class="col-xs-12 col-sm-3 kenmarkInfo" style="padding-left:50px;margin-top:50px;font-size:14px;">
        <strong>KENMARK GROUP</strong><br />
        11851 Plantside Drive<br />
        Louisville, KY 40299
    
        <div class="col-xs-12 col-sm-12 no-gutter" style="margin-top:30px;" >
            <div class="col-xs-2 no-gutter">
                <span style="font-size:12px;">TEL</span>
            </div>
            <div class="col-xs-10 no-gutter">
                800.627.2898<br />
                502.267.4486
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 no-gutter" style="margin-top:15px;">
            <div class="col-xs-2 no-gutter">
                <span style="font-size:12px;">FAX</span>
            </div>
            <div class="col-xs-10 no-gutter">
                800.395.6733<br />
                502.267.6161
            </div>
            
        </div>

        <div class="col-xs-12 col-sm-12 no-gutter" style="margin-top:15px;font-size:12px;">
            info@kenmark.optical.com
        </div>

        
    </div>

    <div class="col-xs-12 visible-xs hidden-sm-block"> 
            <hr style="border-color:#bbb"/>
        </div>


    <div class="col-xs-12 col-sm-6" style="margin-top:50px;font-size:14px;">
        Have questions? Need to talk to a sales representative? Contact us
        using the form below, and we'll reply within 1 business day. Or you 
        can contact us directly using the information to the left.

        @using (Ajax.BeginForm("SaveContact", "Contact", new AjaxOptions {OnSuccess = "OnSuccess", OnFailure = "OnFailure"}))
        {
           
            
            <div class="row">
                @Html.Label("Your Name*", new {@class="col-sm-12", @style="margin-top:30px;"})
            </div>
            
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    @Html.TextBoxFor(m => m.first, new { @class="col-xs-12 col-sm-11 form-control"})
                    @Html.LabelFor(m => m.first, new { @class="col-xs-12 no-gutter", @style="font-size:11px; color:#bbbbbb;"})
                    @Html.ValidationMessageFor(m => m.first)
                </div>
                 
                <div class="col-xs-12 col-sm-6">
                    @Html.TextBoxFor(m => m.last, new { @class="col-xs-12 form-control"})
                    @Html.LabelFor(m => m.last, new { @class="col-xs-12 no-gutter", @style="font-size:11px; color:#bbbbbb;"})
                    @Html.ValidationMessageFor(m => m.last)
                </div>
           </div>
            
            
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    @Html.LabelFor(m => m.phone, new{ @class="col-xs-12 no-gutter", @style="margin-top:20px;"})
                    @Html.TextBoxFor(m => m.phone, new { @class="col-xs-12 col-sm-11 form-control"})
                    @Html.ValidationMessageFor(m => m.phone)
                </div>

                <div class="col-xs-12 col-sm-6">
                    @Html.LabelFor(m => m.email, new{ @class="col-xs-12 no-gutter", @style="margin-top:20px;"})
                    @Html.TextBoxFor(m => m.email, new { @class="col-xs-12 form-control"})
                    @Html.ValidationMessageFor(m => m.email)
                </div>
            </div>
            
            
            
            <div class="row">
                <div class="col-xs-12">
                    @Html.LabelFor(m => m.address, new{@class="col-xs-12 no-gutter", @style="margin-top:20px;"})
                    @Html.TextBoxFor(m => m.address,  new { @class="col-xs-12 form-control"})
                </div>
            </div>
            
            
            
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    @Html.LabelFor(m => m.city, new{ @class="col-xs-12 no-gutter", @style="margin-top:20px;"})
                    @Html.TextBoxFor(m => m.city, new{ @class="col-xs-12 form-control"})
                </div>

                <div class="col-xs-4 col-sm-3">
                    @Html.LabelFor(m => m.state, new{@class="col-xs-12 no-gutter", @style="margin-top:20px;"})
                    @Html.DropDownListFor(m => m.state, Kenmark_Consumer.Models.Common.States, new { @class="col-xs-12 form-control no-gutter"})
                </div>
            
                <div class="col-xs-8 col-sm-3">
                    @Html.LabelFor(m => m.zip, new{ @class="col-xs-12 no-gutter", @style="margin-top:20px;"})
                    @Html.TextBoxFor(m => m.zip, new{ @class="col-xs-12 form-control"})
                </div>
            </div>
            
            
            
            <div class="row">
                <div class="col-xs-12">
                    @Html.LabelFor(m => m.comment, new { @class="col-xs-12 no-gutter", @style="margin-top:20px;"})
                    @Html.TextAreaFor(m => m.comment, 10, 10, new { @class="col-xs-12 form-control"})
                    @Html.ValidationMessageFor(m => m.comment)
                </div>
            </div>
            
            <div class="col-xs-12 no-gutter"> 
                <button type="submit" class="hidden-xs btn btn-disabled submitButton"style="margin-top:20px;">Submit</button>
                    
                    
            
                <button type="submit" style="margin-top:20px;" class="visible-xs btn btn-default form-control submitButton" >Submit</button>
            </div>
            
            <div class="col-xs-12 text-center" id="validate" style="color:red;font-weight:bold;margin-top:10px;"></div>
        }
        
        
        

    </div><!-- end middle screen div -->

    
    
    <div class="col-xs-12 col-sm-3" style="margin-top:50px;">RESERVED KENMARK PIC</div>

</div>
