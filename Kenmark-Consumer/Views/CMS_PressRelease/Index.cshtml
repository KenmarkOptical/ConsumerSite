@model Kenmark_Consumer.Models.PressRelease

@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    .divider {
        background-color:#EFEFEF;
        cursor:pointer;
    }
    .divider:hover {
        background-color:#e0dede;
    }
</style>

<div class="col-xs-12" style="margin-top:50px; font-size:14px;">
        <a href="/CMS_Home"><span class="glyphicon glyphicon-chevron-left"></span> Back</a>
</div>

<div class="col-xs-12" style="font-size:30px;text-align:center;margin-bottom:70px;">
    <h3>Press Release</h3>
    <img src="@Url.Content("~/Content/images/cms/press-release.png")" class="img-responsive img-circle"  style="max-width:450px; margin:auto;"/>
  
</div>


<div class="row" style="margin-bottom:40px;">
    
        <div class="col-xs-12 col-sm-4 text-center divider" style="margin-bottom:20px; padding:30px;border: 1px solid #ccc;">
            <a href="~/CMS_PressRelease/Add">
                <span style="font-size:26px;" class="glyphicon glyphicon-plus"></span>
                <div class="pageTitle" id="add"><span style="font-size:20px">Add a Press Release</span></div>
            </a>
        </div>

        <div class="col-xs-12 col-sm-4 text-center divider" style="margin-bottom:20px;padding:30px;border: 1px solid #ccc;">
            <a href="~/CMS_PressRelease/Edit">
                <span style="font-size:26px;" class="glyphicon glyphicon-minus"></span>
                <div class="pageTitle" id="edit"><span style="font-size:20px">Edit a Press Release</span></div>
            </a>
        </div>

        <div class="col-xs-12 col-sm-4 text-center divider" style="margin-bottom:20px;padding:30px;border: 1px solid #ccc;">
            <a href="~/CMS_PressRelease/Delete">
                <span style="font-size:26px;" class="glyphicon glyphicon-remove"></span>
                <div class="pageTitle" id="delete"><span style="font-size:20px">Delete a Press Release</span></div>
            </a>
        </div>
   
    </div>
