@model Kenmark_Consumer.Models.SingleBlog

@{
    ViewBag.Title = "What To Do?";
}

<script type="text/javascript">
    $('.pageTitle').click(function () {

        var page = this.id;

        $('.pageContent').hide();

        $('#' + page + "Span").show();

        $('.' + page + 'Upload').show();
    });
</script>

<div class="col-xs-12" style="font-size:30px;text-align:center;margin-top:50px;margin-bottom:70px;">
    ADD, EDIT, OR DELETE A PRESS RELEASE
</div>


<div class="row" style="margin-bottom:40px;">
    <div class="col-xs-12 col-sm-4 text-center" style="margin-bottom:20px;">
        <span style="font-size:26px;">Have a new Press Release?</span>
        <div class="pageTitle" id="add"><a href="~/CMS_PressRelease/AddPressReleaseIndex"><span style="font-size:20px">Add a Press Release</span></a></div>
    </div>

    <div class="col-xs-12 col-sm-4 text-center" style="margin-bottom:20px;">
        <span style="font-size:26px;">Want to change one?</span>
        <div class="pageTitle" id="edit"><a href="~/CMS_PressRelease/EditPressReleaseIndex"><span style="font-size:20px">Edit a Press Release</span></a></div>
    </div>

    <div class="col-xs-12 col-sm-4 text-center" style="margin-bottom:20px;">
        <span style="font-size:26px;">Tired of that old Release?</span>
        <div class="pageTitle" id="delete"><a href="~/CMS_PressRelease/DeletePressReleaseIndex"><span style="font-size:20px">Delete a Press Release</span></a></div>
    </div>
</div>
